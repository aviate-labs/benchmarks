{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES5"
        ],
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}